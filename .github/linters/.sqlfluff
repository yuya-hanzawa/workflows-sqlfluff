[sqlfluff]
dialect = bigquery
sql_file_exts = .sql,.ddl
exclude_rules = L014,L016,L031,L034,L057

[sqlfluff:rules]
tab_space_size = 4
indent_unit = space

[sqlfluff:rules:L010]
capitalisation_policy = upper

[sqlfluff:rules:L011]
aliasing = explicit

[sqlfluff:rules:L016]
ignore_comment_lines = True

[sqlfluff:rules:L029]
ignore_words = filter
